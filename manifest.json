{
    // Comments are accepted in the manifest, even though it is JSON.
    "manifest_version": 3,
    "name": "MirthEx – Extension of Mirth",
    "description": "Companion to Mirth Turtle software.",
    "version": "0.0.1",
    "icons": {
        "16": "logo/tungsten16.png",
        "32": "logo/tungsten32.png",
        "48": "logo/tungsten48.png",
        "128": "logo/tungsten128.png"
    },
    "options_page": "settings/settings.html",
    "action": {
        "default_title": "MirthEx – Extension of Mirth",
        "default_popup": "popup/popup.html"
    },
    "permissions": ["cookies", "storage"],
    "host_permissions": [
        "*://*/*"
    ],
    "background": {
        "service_worker": "service-worker.js"
    },
    "content_scripts": [{
        "js": ["foreground.js"],
        "css": ["widget.css"],
        "matches": ["https://online-go.com/*", "https://mirthturtle.com/*", "https://www.mirthturtle.com/*"]
    }]
}
